@model Co_Operations.Models.ProductModels.ProductDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product Info</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ProductSKU)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductSKU)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MakerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MakerName)
        </dd>
    </dl>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.FirstOrDefault().TransactionNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.FirstOrDefault().LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.FirstOrDefault().Quantity)
            </th>
        </tr>
        @foreach (var tP in Model.Transactions)
        {
            <tr class="tableData" data-href="/Transaction/Details/@tP.TransactionNumber">
                <td>
                    @Html.DisplayFor(modelItem => tP.TransactionNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => tP.LocationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => tP.Quantity)
                </td>
            </tr>
        }
    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductSKU }) |
    @Html.ActionLink("Back to List", "Index")
</p>


@section Scripts{
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function () {
            const rows = document.querySelectorAll('tr[data-href]');
            console.log(rows)
            rows.forEach(row => {
                row.addEventListener("click", function () {
                    window.location.href = row.dataset.href;
                });
            });
        });
    </script>
}
